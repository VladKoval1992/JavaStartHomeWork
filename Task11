/*Дано два массива одинаковой длинны, упорядоченных
по возрастанию. Объединить массивы так, чтобы
получился один упорядоченный массив. Пример: {1, 3, 10} +
{2, 5, 8} = {1, 2, 3, 5, 8, 10}  */

import java.util.Arrays;
import java.util.Random;
import java.util.Scanner;
public class Task11 {

    public static int[] array(int a){
        Random rand = new Random();
        int[] array = new int[a];
        for (int i=0; i<a; i++)
            array[i]=1+rand.nextInt(10);
        return array;
    }

    public static int[] sorting_array(int[] array){
        for (int i = 0; i <array.length; i++){
            for (int j = i + 1; j < array.length; j++)
                if (array[j] < array[i]){
                int t = array[i];
                array[i] = array[j];
                array[j] = t;
            }
        }
        return array;
    }

    public static int[] array_connect (int[] array1, int[] array2){
        int[] newarray = new int[array1.length+array2.length];
        System.arraycopy(array1, 0, newarray,0, array1.length );
        System.arraycopy(array2, 0, newarray,array1.length, array2.length );
        return sorting_array(newarray);
    }

   public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("Введіть довжину масиву");
        int length = in.nextInt();
        int[] array1 = sorting_array(array(length));
        int[] array2 = sorting_array(array(length));
        System.out.println("Перший масив = " + Arrays.toString(array1));
        System.out.println("Другий масив = " + Arrays.toString(array2));
        System.out.println("З'єднаний і відсортований масив" + Arrays.toString(array_connect(array1,array2)));

    }
}

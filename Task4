/*Вычислить x^n.*/
import java.time.LocalDate;
import java.util.Scanner;
public class Task5 {
    public static void calculation (double x, double n){
        double power=0;
        power = Math.pow(x,n);
        System.out.println("Число " + (int)x + " в степені " + (int)n + " = " +(int)power);
    }
    public static void main(String[] args) {
        double x=0;
        double n=0;
        Scanner in = new Scanner(System.in);
        System.out.println("Введіть число");
        x = in.nextDouble();
        System.out.println("Введіть степінь");
        n = in.nextDouble();
        calculation(x,n);
    }
}
